{
	"compilerOptions": {
		"module": "esnext",
		"moduleResolution": "node",
		"target": "esnext",
		"strict": true,
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": false,
		"noImplicitAny": false,
		"jsx": "react",
		"lib": ["esnext", "dom"],
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"exclude": ["**/node_modules/**", "**/__tests__/**"]
}
