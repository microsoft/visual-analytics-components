{
	"name": "@visual-analytics-components/project",
	"private": true,
	"version": "0.3.0",
	"description": "Visual Analytic Components for the Web",
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/visual-analytics-components"
	},
	"engines": {
		"node": ">= 10.0"
	},
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"clean_all": "yarn workspaces foreach -piv run clean",
		"build_all": "yarn workspaces foreach -piv --topological-dev run build",
		"bundle_all": "yarn workspaces foreach -piv run bundle",
		"watch_all": "yarn workspaces foreach -piv run watch",
		"start_all": "yarn workspaces foreach -piv run start",
		"lint": "essex lint --strict --docs",
		"test": "essex test",
		"test:ci": "essex test --ci",
		"ci": "CHOKIDAR_USEPOLLING=1 CI=true NODE_OPTIONS=\"--unhandled-rejections=strict --max-old-space-size=4124\" run-s build_all lint bundle_all test:ci"
	},
	"author": "Chris Trevino <chtrevin@microsoft.com>",
	"license": "MIT",
	"devDependencies": {
		"@essex/eslint-plugin": "^10.0.1",
		"@essex/jest-config": "^10.0.2",
		"@essex/prettier-config": "^10.0.0",
		"@essex/scripts": "^10.0.1",
		"@types/enzyme": "^3.10.7",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"husky": "^4.3.0",
		"lerna": "^3.22.1",
		"lint-staged": "^10.4.2",
		"npm-run-all": "^4.1.5",
		"react": "^16.14.0",
		"react-dom": "^16.14.0",
		"regenerator-runtime": "^0.13.7",
		"shx": "^0.3.2"
	},
	"dependencies": {
		"@commitlint/cli": "^9.1.2"
	},
	"workspaces": [
		"packages/*"
	]
}
