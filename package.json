{
	"name": "@visual-analytics-components/project",
	"private": true,
	"description": "Visual Analytic Components for the Web",
	"repository": {
		"type": "git",
		"url": "git@ssh.dev.azure.com:v3/msrp-essex/Rainbow%20Narwhal/disvis"
	},
	"engines": {
		"node": ">= 10.0"
	},
	"scripts": {
		"preinstall": "npx only-allow pnpm",
		"postinstall": "shx rm -rf node_modules/@types/react-native",
		"clean": "pnpm -r --parallel --stream clean",
		"build": "pnpm -r --stream build",
		"bundle": "pnpm -r --stream bundle",
		"lint": "essex lint --strict --docs",
		"test": "essex test",
		"test:ci": "essex test --ci",
		"watch": "pnpm -r --stream --parallel watch",
		"ci": "cross-env CHOKIDAR_USEPOLLING=1 CI=true NODE_OPTIONS=\"--unhandled-rejections=strict --max-old-space-size=4124\" run-s build lint bundle test:ci",
		"start": "pnpm -r start --parallel --stream"
	},
	"author": "Chris Trevino <chtrevin@microsoft.com>",
	"license": "MIT",
	"devDependencies": {
		"@essex/eslint-plugin": "^9.0.2",
		"@essex/jest-config": "^9.0.2",
		"@essex/prettier-config": "^9.0.2",
		"@essex/scripts": "^9.0.2",
		"@types/enzyme": "^3.10.5",
		"cross-env": "^7.0.2",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.2",
		"husky": "^4.2.5",
		"lerna": "^3.22.1",
		"lint-staged": "^10.2.11",
		"npm-run-all": "^4.1.5",
		"react": "^16.13.1",
		"react-dom": "^16.13.1",
		"regenerator-runtime": "^0.13.7",
		"shx": "^0.3.2"
	},
	"husky": {
		"hooks": {
			"pre-commit": "essex pre-commit",
			"commit-msg": "essex commit-msg"
		}
	},
	"dependencies": {
		"@commitlint/cli": "^9.1.2"
	}
}
