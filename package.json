{
	"name": "@visual-analytics-components/project",
	"private": true,
	"version": "0.3.0",
	"description": "Visual Analytic Components for the Web",
	"repository": {
		"type": "git",
		"url": "https://github.com/microsoft/visual-analytics-components"
	},
	"engines": {
		"node": ">= 10.0"
	},
	"scripts": {
		"preinstall": "npx only-allow yarn",
		"clean:": "yarn workspaces foreach -pv run clean",
		"build:": "yarn workspaces foreach -pv run build",
		"bundle:": "yarn workspaces foreach -pv --topological-dev run bundle",
		"publish:": "yarn workspaces foreach -pv npm publish --tolerate-republish --access public",
		"watch:": "yarn workspaces foreach -piv run watch",
		"start:": "yarn workspaces foreach -piv run start",
		"lint:": "essex lint --strict --fix",
		"test": "essex test",
		"test:ci": "essex test --ci",
		"gitisclean": "essex git-is-clean",
		"ci": "CI=true npm-run-all -p build: lint: test:ci -s bundle: gitisclean"
	},
	"author": "Chris Trevino <chtrevin@microsoft.com>",
	"license": "MIT",
	"devDependencies": {
		"@essex/eslint-config": "^19.0.2",
		"@essex/eslint-plugin": "^19.0.2",
		"@essex/jest-config": "^19.0.2",
		"@essex/prettier-config": "^18.0.2",
		"@essex/scripts": "^19.0.5",
		"@types/enzyme": "^3.10.7",
		"@types/jest": "^26.0.15",
		"@typescript-eslint/eslint-plugin": "^4.4.1",
		"@typescript-eslint/parser": "^4.4.1",
		"enzyme": "^3.11.0",
		"enzyme-adapter-react-16": "^1.15.5",
		"eslint-import-resolver-node": "^0.3.4",
		"husky": "^4.3.0",
		"lerna": "^3.22.1",
		"lint-staged": "^10.4.2",
		"npm-run-all": "^4.1.5",
		"react": "^16.14.0",
		"react-dom": "^16.14.0",
		"regenerator-runtime": "^0.13.7",
		"shx": "^0.3.2",
		"styled-components": "^5.3.3",
		"ts-jest": "^26.4.1",
		"typescript": "^4.5.5"
	},
	"dependencies": {
		"@commitlint/cli": "^9.1.2",
		"@types/styled-components": "^5.1.21"
	},
	"workspaces": [
		"packages/*"
	]
}
